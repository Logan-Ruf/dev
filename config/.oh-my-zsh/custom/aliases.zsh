alias dc="docker-compose"
alias dcu="docker-compose up -d"
alias dcd="docker-compose --profile \"*\" down"
alias dcr="docker-compose restart"
alias dcl="docker-compose logs"
alias dcb="docker-compose build"
alias dce="docker-compose exec"
alias dcrebuild="docker-compose down && docker-compose up --build -d"
alias dcdb="docker-compose exec --user 0 django bash"
alias mm="docker-compose exec django python manage.py makemigrations"
alias mi="docker-compose exec django python manage.py migrate"
alias su="docker-compose exec django python manage.py show_urls"
alias cs="docker-compose exec django python manage.py collectstatic --noinput"
alias vim="nvim"
alias vir="source .venv/bin/activate"
alias open="explorer.exe ."
